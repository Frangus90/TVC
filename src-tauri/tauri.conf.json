{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TVC",
  "identifier": "com.tvc.app",
  "version": "0.6.1",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "TVC - TV Calendar",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": true
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:tvc.db"]
    },
    "updater": {
      "endpoints": [
        "https://github.com/Frangus90/TVC/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZCM0IxNDdCMDhBRkQzNTcKUldSWDA2OElleFE3K3pVNGpOZkFsa1RRbWs3RWQ3RTBFT3lzNzR6RTIwVmo5TjU4SXZqaHlTYW0K",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
