{
  "$schema": "https://schemas.tauri.app/config/2/capability.json",
  "identifier": "default",
  "description": "Default capability for TVC",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:webview:allow-internal-toggle-devtools",
    "opener:default",
    "sql:default",
    "sql:allow-execute",
    "sql:allow-select",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-message",
    "process:default",
    "process:allow-restart"
  ]
}
